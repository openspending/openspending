#!/bin/bash

set -eu

LOCALES=(de ar is_IS)

#pybabel init -i messages.pot -d openspending/translations -l de 

pybabel extract -F babel.cfg -k lazy_gettext -o openspending/translations/messages.pot openspending
pybabel update -i messages.pot -d openspending/translations

for LOCALE in ${LOCALES[*]}; do
    pybabel compile -f -i messages.pot -D messages -l $LOCALE -d openspending/translations;
done;
